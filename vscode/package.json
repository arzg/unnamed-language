{
  "name": "gingerbread",
  "description": "VS Code support for the Gingerbread language",
  "license": "MIT",
  "version": "0.0.0",
  "engines": {
    "vscode": "^1.43.0"
  },
  "contributes": {
    "languages": [
      {
        "id": "gingerbread",
        "extensions": [
          ".gb"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:gingerbread"
  ],
  "main": "./out/extension",
  "scripts": {
    "compile": "tsc -b",
    "watch": "tsc -b -w"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^12.12.0",
    "@types/vscode": "^1.52.0",
    "typescript": "^4.4.3"
  }
}
